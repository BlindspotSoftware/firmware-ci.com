---
tags: blog
permalink: /blog/{{ page.fileSlug | slugify }}/index.html
---

{% extends "layouts/base.njk" %}

{% block content %}
  <article class="post | stack-xl wrapper">

    <header class="post__header">
      <div class="post-header__info">
        <h1 class="text-4xl leading-tight text-center weight-ultrabold">
          {{ title }}
        </h1>
        <p>
        by {{ author }}
        </p>
      </div>
      {% if image %}
        <img class="post__image" src="/assets/images/blog/{{ image }}" alt="" eleventy:widths="400,600,800,1000,1200" sizes="100vw" />
      {% endif %}

    </header>

    <div class="prose">
      {{ content | markdown | safe }}
    </div>
  </article>
{% endblock %}