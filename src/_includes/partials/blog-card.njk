{% set isHighlight = loop.index0 == 0 %}

<article class="card | blog-card">
  {% if post.data.image %}
    <img
      class="blog-card__image"
      src="/assets/images/blog/{{ post.data.image }}"
      alt=""
      eleventy:widths="400,600,800"
      sizes="100vw, (min-width: 45em) 50vw" />
  {% endif %}
  <header class="blog-card__header">
    <h2 class="blog-card__title">{{ post.data.title }}</h2>
    {% if post.data.teaser %}
	<p>{{ post.data.teaser }}</p>
    {% endif %}
    <div class="cluster" style="--cluster-gap: .5em;">
      <time class="blog-card__date" datetime="{{ post.data.date }}">{{ post.data.date | readableDate }}</time>
      <span aria-hidden="true">|</span>
      {% if post.data.author %}
	{% for author in authors %}
      	  {% if author.id == post.data.author %}
	    <p>by {{ author.name }} </p>
	  {% endif %}
	{% endfor %}
      {% endif %}
    </div>
  </header>
  <a class="blog-card__link" href="{{ post.url }}" aria-labell="View Post: {{ post.data.title }}"></a>
</article>
